---
import '../global.css';
import Card from '../components/common/Card.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import FriendLink from '../components/FriendLink.astro';

const myInfo = {
  name: 'M1saK1',
  bio: 'From 杭州电子科技大学，学习Web开发中...',
  interests: ['Coding', 'Rhythm Game', 'TCG', 'Idol'],
};
---

<BaseLayout>
  <Card title=`你好我是${myInfo.name}` subtitle='About' class='w-3.5/4 max-w-3xl mx-auto mt-10'>
    <p class='mb-4'>{myInfo.bio}</p>
      <h3 class=' font-semibold mb-2'>兴趣爱好</h3>
        <ul class='list-disc list-inside'>
          {myInfo.interests.map((interest) => (
            <li>{interest}</li>
          ))}
        </ul>
  </Card>
  <FriendLink />
</BaseLayout>

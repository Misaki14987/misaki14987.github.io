---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import blogs from '../scripts/utils'
---

<BaseLayout title='哈基米'>
    {blogs.map((blog) => (
        <BlogCard
            key={blog.link}
            title={blog.title}
            subtitle={blog.subtitle}
            image={blog.image}
            link={blog.link}
            description={blog.description}
        />
    ))}
</BaseLayout>

---
export interface Props {
    title: string;
    subtitle?: string;
    variant?: 'solid' | 'frosted';
    class?: string;
}

const { title, subtitle, variant = 'solid', class: additionalClasses='' } = Astro.props;

const baseClass =
  'rounded-3xl p-6 sm:p-8 transition-shadow duration-200 ' +
  'shadow-lg shadow-blue-900/10 backdrop-blur';

const variantClasses = variant === 'solid'
    ? 'bg-white hover:shadow-blue-900/20'
    : 'bg-white/70 hover:shadow-blue-900/20';

const classes = baseClass + ' ' + variantClasses + ' ' + additionalClasses;

---
<section class={classes}>
  <h2 class="text-2xl font-bold mb-2">{title}</h2>
  {subtitle && <p class="text-gray-600 mb-4">{subtitle}</p>}
  <slot />
</section>
